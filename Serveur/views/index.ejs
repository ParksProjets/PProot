<html>
<head>

	<meta charset="utf-8">
	
	<title>Panel control</title>

	<link rel="stylesheet" href="css/all.css">

</head>
<body>
	
	

	<div class="cache" id="cachePanel"></div>

	<div class="cache" id="cacheSpe"></div>

	<div class="cache" id="cacheSeq"></div>

	

	<!-- Spe -->

	<div class="panel addPanel" id="speAddPanel">
		
		<h3>Ajouter une spécialité</h3>

		<label>Nom: </label>
		<input type="text">

		<button class="btn">Ajouter</button>

	</div>


	<div class="panel" id="spePanel">
		
		<h3>Séquence: <span></span><i class="delete">&#xe602;</i></h3>

		<label class="l-users">Users:</label>
		<div class="p-edit" contenteditable="true"></div><br>

		<label>Séquence:</label>
		<select class="selectSeq firstEmpty"></select>
		
	</div>




	<!-- Séquences -->

	<div class="panel addPanel" id="seqAddPanel">
		
		<h3>Ajouter une séquence</h3>

		<label>Nom: </label>
		<input type="text">

		<button class="btn">Ajouter</button>

	</div>


	<div class="panel" id="seqPanel">
		
		<h3>Séquence: <span></span><i class="delete">&#xe602;</i></h3>

		<pre contenteditable="true"></pre>

	</div>



	
	<div id="page-password">

		<form>
			<input type="password" placeholder="Entrez le mot de passe">
			<button type="submit">></button>
		</form>

	</div>



	
	<div id="page-main" class="container">

		
		<div class="top">
			
			<h1>Interface de contrôle</h1>


			<label for="input-reloadTime">Période de mise à jour de cette page (en s): </label>
			<input type="number" value="10" min="1" id="input-reloadTime">
			<br><br>

			
			<h3>Utilisateurs débloquées</h3>

			<div id="input-userUnlokck" class="p-edit" contenteditable="true"></div>



			<h3>Spécials</h3>

			<div id="spe" class="clearfix">
				
				<div id="addSpeBtn">+</div>

			</div>



			<h3>Séquences</h3>

			<div id="sequences" class="clearfix">
				
				<div id="addSeqBtn">+</div>

			</div>



			<h3>Affichage</h3>

			<%
			for (var i = 0, l = affichages.length; i < l; i++) {
				var aff = affichages[i];
			%>
				
				<div class="views" data-name="<%= aff.name %>">
					
					<% if (affichages[i].hasHtml) { %>
						<i class="edit">&#xe600;</i>
					<% } %>

					<p><%= aff.displayName %></p>
				</div>
				

			<% } %>

			<p id="nbrConnectedPc">Nombre d'ordinateurs connectés: <b>0</b></p><br>

		</div>
		



		<div class="right">
			
			<h3>Bloquage</h3>
			<button id="btn-activeOnAll" class="btn btn-large">Activer sur tous</button>
			<button id="btn-unactiveOnAll" class="btn btn-red btn-large">Désactiver sur tous</button>
			

			<h3>Séquences</h3>

			<p id="seqPricipale">Séquence principale:  <select class="selectSeq" id="select-seq"></select></p>

			<button id="btn-seqOn" class="btn btn-large">Activer les séquences</button>
			<button id="btn-seqOff" class="btn btn-red btn-large">Désactiver les séquences</button>

		</div>
		



		<div class="center">
			
			<h3>
				Ordinateurs connectées
				<input id="pcFiltre" type="text" placeholder="Filtre">
				<i>&#xe601;</i>
			</h3>

			<table id="pc-list">
				
				<thead><tr>
					<th>Port</th>
					<th>Nom du PC</th>
					<th>Nom de l'utilisateur</th>
					<th>Actions</th>
				</tr></thead>

				<tbody></tbody>

			</table>

		</div>
		

		<div id="bottom"></div>

	</div>

	
	<!-- Mots commandes séquences -->
	<script>
	var seqCmdWords = ['DEBUT','FIN'
	<% for (var i = 0, l = seqCmd.length; i < l; i++) { %>
		,'<%= seqCmd[i] %>'
	<% } %>
	];
	</script>


	<script src="js/jquery.js"></script>
	<script src="js/TweenMax.js"></script>
	<script src="js/all.js"></script>

	
	<!-- On ajoute les Html des affichages -->
	<% for (var i = 0, l = affichages.length; i < l; i++) { %>
		
		<% if (affichages[i].hasHtml) { %>
			<%- affichages[i].html %>
		<% } %>

	<% } %>


</body>
</html>